<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD with Tai</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>

<body>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Email</th>
                <th scope="col">Full Name</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Adress</th>
                <th scope="col" colspan="2">Option</th>
            </tr>
        </thead>
        <tbody>
            <% for(var i=0; i < dataTable.length; i++) { %>
                <tr>
                    <th scope="row">
                        <%= dataTable[i].id %>
                    </th>
                    <td>
                        <%= dataTable[i].email %>
                    </td>
                    <td>
                        <%= dataTable[i].fullName %>
                    </td>
                    <td>
                        <%= dataTable[i].phoneNumber %>
                    </td>
                    <td>
                        <%= dataTable[i].address %>
                    </td>
                    <td>
                        <a href="/edit-crud?id=<%= dataTable[i].id%>" class="btn btn-outline-primary">Edit</a>
                        <a href="/delete-crud?id=<%= dataTable[i].id%>" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
                <% } %>
        </tbody>
    </table>
</body>

</html>